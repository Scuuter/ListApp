<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vovch.listogram_20">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".ActiveActivityProvider"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WithLoginActivity" />
        <activity
            android:name=".GroupList2Activity"
            android:theme="@style/AppTheme.NoActionBarExtended" />
        <activity
            android:name=".Group2Activity"
            android:theme="@style/AppTheme.NoActionBarExtended" />
        <activity
            android:name=".NewGroup"
            android:theme="@style/AppTheme.NoActionBarExtended"/>
        <activity
            android:name=".CreateListogramActivity"
            android:theme="@style/AppTheme.NoActionBarExtended" />
        <activity
            android:name=".ActiveListsActivity"
            android:theme="@style/AppTheme.NoActionBarExtended">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroupSettingsActivity"
            android:theme="@style/AppTheme.NoActionBarExtended"/>
        <service android:name=".ActiveCheckFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".ActiveCheckAndroidFirebaseMsgService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>